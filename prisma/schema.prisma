enum QuestionType {
    TEXT
    IMAGE
    VIDEO
    AUDIO
    EMOJI
}

enum AnswerMode {
    CASH
    MCQ
    EITHER_ONE
    TRUE_FALSE
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Theme {
  id             Int       @id @default(autoincrement())
  name           String    @unique    
  smiley         String    @unique
  questions      Question[]
  createdAt      DateTime  @default(now())
  updateAt       DateTime  @updatedAt @default(now())
}

model Question {
  id                  Int           @id @default(autoincrement())
  question            String
  type                QuestionType
  theme               Theme?        @relation(fields: [themeId], references: [id], onDelete: SetNull)
  themeId             Int?
  difficulty          Int           @default(1)
  mediaUrl            String?                                
  emojis              String?
  allowedAnswerMode   AnswerMode[]                            
  answers             Answer[]
  answerDetail        String?
  userId              String?
  createdAt           DateTime      @default(now())
  updateAt            DateTime      @updatedAt @default(now())
}

model Answer {
  id          Int       @id @default(autoincrement())
  question    Question  @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId  Int
  text        String
  isCorrect   Boolean   @default(false)
}