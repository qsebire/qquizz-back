enum QuestionType {
    TEXT
    IMAGE
    VIDEO
    AUDIO
    EMOJI
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Theme {
  id             Int       @id @default(autoincrement())
  name           String    @unique    
  smiley         String    @unique
  questions      Question[]
}

model Question {
  id            Int           @id @default(autoincrement())
  question      String
  type          QuestionType
  theme         Theme?         @relation(fields: [themeId], references: [id], onDelete: SetNull)
  themeId       Int?
  imageUrl      String?                                
  videoUrl      String?
  audioUrl      String?
  emojis        String?
  answerDetail  String?                               
  answers       Answer[]
  userId        String?
}

model Answer {
  id          Int       @id @default(autoincrement())
  question    Question  @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId  Int
  text        String
  isCorrect   Boolean   @default(false)
}